<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/large_widget_spacing">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_traveller_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adults"
                android:textColor="@color/text_color"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold" />

        </LinearLayout>

    <TextView
        android:id="@+id/tv_age_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/basic_widget_spacing"
        android:layout_centerHorizontal="true"
        android:text="16+" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_subtract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/larger_widget_spacing"
                android:layout_marginRight="@dimen/larger_widget_spacing"
                android:text="-"
                android:textColor="@color/text_color"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_traveller_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/larger_widget_spacing"
                android:text="1"
                android:textColor="@color/text_color"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="@color/text_color"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold"/>

        </LinearLayout>

</RelativeLayout>
