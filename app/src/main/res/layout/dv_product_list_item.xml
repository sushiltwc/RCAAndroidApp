<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="-3dp"
    android:layout_marginRight="-3dp"
    app:cardCornerRadius="0dp"
    android:background="@color/colorWhite"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/basic_widget_spacing"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorLightGray"
            app:cardCornerRadius="@dimen/basic_widget_spacing">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/basic_widget_spacing"
                android:layout_marginBottom="@dimen/basic_widget_spacing"
                android:scaleType="fitXY"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_product_period"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="30"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/extra_large_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_product_lable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="DAYS"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/medium_text_size" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/basic_widget_spacing"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_visa_type"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/basic_widget_spacing"
                android:layout_marginTop="@dimen/basic_widget_spacing"
                android:layout_weight="1"
                android:text="Dubai Tourist Visa"
                android:textColor="@color/text_color"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/basic_widget_spacing"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_visa_processing_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VISA IN 2-3 DAYS"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  |  " />

                <TextView
                    android:id="@+id/tv_visa_validity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 DAYS VALIDITY"
                    android:textSize="@dimen/normal_text_size" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_product_amt"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="124.0"
                android:textColor="@color/colorDarkBlue" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>