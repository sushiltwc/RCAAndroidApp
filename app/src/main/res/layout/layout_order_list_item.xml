<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/large_widget_spacing"
        android:layout_marginLeft="@dimen/extra_large_widget_spacing"
        android:layout_marginRight="@dimen/large_widget_spacing"
        android:layout_marginTop="@dimen/large_widget_spacing">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_account_order_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/large_widget_spacing"
                android:text="30 Days Dubai Tourist Visa"
                android:textColor="@color/text_color"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_account_traveller_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_family"
                android:drawablePadding="@dimen/medium_widget_spacing"
                android:gravity="center_vertical"
                android:textColor="@color/text_color"
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_account_travel_dt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_calendar"
                android:drawablePadding="@dimen/medium_widget_spacing"
                android:gravity="center_vertical"
                android:textColor="@color/text_color"
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>