<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/small_widget_spacing"
    android:layout_marginRight="@dimen/small_widget_spacing"
    android:backgroundTint="#F7FAFB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_widget_spacing"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date_of_travel"
                android:textSize="@dimen/normal_text_size" />

            <TextView
                android:id="@+id/tv_od_travel_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="27/04/2018"
                android:textSize="@dimen/normal_text_size"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
