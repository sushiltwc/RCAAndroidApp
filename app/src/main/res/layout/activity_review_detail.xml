<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7FAFB">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="60dp"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/card_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_widget_spacing"
                android:layout_marginRight="@dimen/large_widget_spacing"
                android:layout_marginTop="@dimen/extra_larger_widget_spacing">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/large_widget_spacing"
                    android:paddingRight="@dimen/large_widget_spacing"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/large_widget_spacing"
                        android:paddingTop="@dimen/large_widget_spacing">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_order_product_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="14 Days Tourist Visa"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/large_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/basic_widget_spacing"
                                android:text="All inclusive price" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_order_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â‚¹ 3669"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/larger_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text="Total"
                                android:textColor="@color/text_color" />

                        </LinearLayout>


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="@dimen/medium_widget_spacing"
                        android:background="@color/colorGray" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/extra_larger_widget_spacing"
                        android:layout_marginTop="@dimen/large_widget_spacing">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/larger_widget_spacing"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_visa_processing" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/medium_widget_spacing"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_od_processing_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2/3 Days"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/medium_text_size"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Visa processing" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/extra_larger_widget_spacing"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_visa_validity" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/medium_widget_spacing"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_od_visa_validity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="30 Days"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/medium_text_size"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Visa validity" />
                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/medium_widget_spacing"
                        android:layout_marginLeft="@dimen/medium_widget_spacing"
                        android:layout_marginRight="@dimen/medium_widget_spacing"
                        android:backgroundTint="#F7FAFB">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/medium_widget_spacing"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/traveller_hint" />

                                <TextView
                                    android:id="@+id/tv_od_traveller_counts"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="1 Adult"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/medium_widget_spacing"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/nationality_hint" />

                                <TextView
                                    android:id="@+id/tv_od_nationalitys"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="India"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>


                    <LinearLayout
                        android:id="@+id/layout_od_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/card_1"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <include
                            layout="@layout/layout_product_order_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/large_widget_spacing"
                            android:layout_marginLeft="@dimen/medium_widget_spacing"
                            android:layout_marginRight="@dimen/medium_widget_spacing"
                            android:layout_marginTop="@dimen/basic_widget_spacing" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_od_96hr_dv_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/card_1"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <include
                            layout="@layout/layout_96_hrs_product_order_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/large_widget_spacing"
                            android:layout_marginLeft="@dimen/medium_widget_spacing"
                            android:layout_marginRight="@dimen/medium_widget_spacing" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <ImageButton
                android:id="@+id/btn_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/larger_widget_spacing"
                android:background="@drawable/ic_check_circle"
                android:elevation="@dimen/small_widget_spacing" />

        </RelativeLayout>
    </ScrollView>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_py_now"
        style="@style/BottomButtonStyle"
        android:text="@string/pay_now" />

</RelativeLayout>
